   "source": [
    "bins = [0, 9, 14, 19, 24, 29, 34, 39, purchase_data[\"Age\"].max()]\n",
    "group_names =[\"<10\", \"10-14\", \"15-19\", \"20-24\", \"25-29\", \"30-34\", \"35-39\", \"40+\"]\n",
    "agePurchaseAnalysisAllData = purchase_data.copy()\n",
    "agePurchaseAnalysisAllData[\"Age Group\"] = pd.cut(purchase_data[\"Age\"], bins, labels=group_names)\n",
    "agePurchaseAnalysis = agePurchaseAnalysisAllData.groupby('Age Group').agg({'Item ID' : 'count',\n",
    "                                                                         'Price' : 'sum'})\n",
    "\n",
    "agePurchaseAnalysis = agePurchaseAnalysis.rename(columns = {\"Item ID\" : \"Purchase Count\",\n",
    "                                                          \"Price\" : \"Total Purchase Value\"})\n",
    "agePurchaseAnalysis[\"Average Purchase Price\"] = agePurchaseAnalysis['Total Purchase Value']/agePurchaseAnalysis['Purchase Count']\n",
    "\n",
    "agePurchaseAnalysisPerPerson = agePurchaseAnalysisAllData.groupby(['Age Group','SN']).agg({'Price' : 'sum'})\n",
    "agePurchaseAnalysisPerPerson = agePurchaseAnalysisPerPerson.groupby('Age Group').agg({'Price':'mean'})\n",
    "agePurchaseAnalysisPerPerson = agePurchaseAnalysisPerPerson.rename(columns = {\"Price\" : \"Average Total Purchase per Person\"})\n",
    "\n",
    "agePurchaseAnalysis = pd.merge(agePurchaseAnalysis, agePurchaseAnalysisPerPerson, how='left',\n",
    "                              left_on=['Age Group'],right_on=['Age Group'])\n",
    "\n",
    "\n",
    "agePurchaseAnalysis = agePurchaseAnalysis[['Purchase Count', 'Average Purchase Price',\n",
    "                                          'Total Purchase Value','Average Total Purchase per Person']]\n",
    "\n",
    "agePurchaseAnalysis['Average Purchase Price'] = agePurchaseAnalysis['Average Purchase Price'].map(\"${:.2f}\".format)\n",
    "agePurchaseAnalysis['Total Purchase Value'] = agePurchaseAnalysis['Total Purchase Value'].map(\"${:.2f}\".format)\n",
    "agePurchaseAnalysis['Average Total Purchase per Person'] = agePurchaseAnalysis['Average Total Purchase per Person'].map(\"${:.2f}\".format)\n",
    "agePurchaseAnalysis = agePurchaseAnalysis.reindex([\"10-14\", \"15-19\", \"20-24\", \"25-29\", \"30-34\", \"35-39\", \"40+\",\"<10\"])\n",
    "del agePurchaseAnalysis.index.name\n",
    "agePurchaseAnalysis"
   ]
