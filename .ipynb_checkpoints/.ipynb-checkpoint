   "source": [
    "bins = [0, 9, 14, 19, 24, 29, 34, 39, purchase_data[\"Age\"].max()]\n",
    "group_names =[\"<10\", \"10-14\", \"15-19\", \"20-24\", \"25-29\", \"30-34\", \"35-39\", \"40+\"]\n",
    "ageDemographicsUniqueNames = purchase_data[[\"Age\",\"SN\",\"Gender\"]].drop_duplicates('SN') \n",
    "\n",
    "countUniqueNames = ageDemographicsUniqueNames['SN'].count()\n",
    "ageDemographicsUniqueNames[\"Age Group\"] = pd.cut(ageDemographicsUniqueNames[\"Age\"], bins, labels=group_names)\n",
    "ageDemographics = ageDemographicsUniqueNames.groupby(\"Age Group\").agg({\"Gender\" : \"count\"})\n",
    "ageDemographics = ageDemographics.rename(columns = {\"Gender\" : \"Total Count\"})\n",
    "\n",
    "ageDemographics[\"Percentage of Players\"] = (ageDemographics[\"Total Count\"]/countUniqueNames*100).map(\"{:.2f}\".format)\n",
    "del ageDemographics.index.name\n",
    "\n",
    "ageDemographics"
   ]
