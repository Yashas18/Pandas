    "uniqueNameDataFrame = purchase_data.drop_duplicates('SN') \n",
    "totalUniqueNames = uniqueNameDataFrame['SN'].count()\n",
    "gender_demographics = uniqueNameDataFrame.groupby('Gender').agg({\"Gender\" : \"count\"})\n",
    "gender_demographics[\"Percentage of Players\"] = (gender_demographics[\"Gender\"]/totalUniqueNames*100).map(\"{:.2f}%\".format)\n",
    "gender_demographics = gender_demographics.rename(columns = {\"Gender\" : \"Total Count\"})\n",
    "del gender_demographics.index.name\n",
    "gender_demographics = gender_demographics.sort_values('Total Count', ascending = False)\n",
    "gender_demographics"
