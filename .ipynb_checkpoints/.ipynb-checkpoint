   "source": [
    "purchase_analysis = purchase_data.groupby('Gender').agg({\"Gender\" : \"count\",\n",
    "                                                        \"Price\" : \"sum\"})\n",
    "purchase_analysis[\"Average Purchase Price\"] = (purchase_analysis[\"Price\"]/purchase_analysis[\"Gender\"]).map(\"${:.2f}\".format)\n",
    "purchase_analysis[\"Price\"] = purchase_analysis[\"Price\"].map(\"${:.2f}\".format)\n",
    "purchase_analysis = purchase_analysis.rename(columns = {\"Gender\" : \"Purchase Count\",\"Price\": \"Total Purchase Value\"})\n",
    "purchase_analysis = purchase_analysis[[\"Purchase Count\",\"Average Purchase Price\",\"Total Purchase Value\"]]\n",
    "\n",
    "uniqueNamePurchase = purchase_data.groupby('SN').agg({\"Price\" : \"sum\"})\n",
    "uniqueNamePurchase = pd.merge(uniqueNamePurchase,purchase_data[['SN','Gender']],how='left',left_on=['SN'],right_on=['SN'])\n",
    "uniqueNamePurchase = uniqueNamePurchase.drop_duplicates('SN') \n",
    "\n",
    "purchase_analysis_AvgTotPurchasePerPerson = uniqueNamePurchase.groupby('Gender').agg({\"Price\" : \"mean\"})\n",
    "purchase_analysis_AvgTotPurchasePerPerson[\"Price\"] = purchase_analysis_AvgTotPurchasePerPerson[\"Price\"].map(\"${:.2f}\".format)\n",
    "purchase_analysis_AvgTotPurchasePerPerson = purchase_analysis_AvgTotPurchasePerPerson.rename(\n",
    "   columns = {\"Price\" : \"Average Total Purchase per Person\"})\n",
    "\n",
    "\n",
    "purchase_analysis = pd.merge(purchase_analysis, purchase_analysis_AvgTotPurchasePerPerson,\n",
    "                             how = 'left', left_on = ['Gender'], right_on = ['Gender'])\n",
    "\n",
    "purchase_analysis"
   ]
